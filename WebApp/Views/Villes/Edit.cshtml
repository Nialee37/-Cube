@model WebApp.Models.VilleViewModel
@{
    ViewData["Title"] = "Modifier la ville";
}
<h2>Modifier la ville</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input type="hidden" asp-for="Id" />
            </div>
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPostal" class="control-label"></label>
                <input asp-for="CPostal" class="form-control" />
                <span asp-validation-for="CPostal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Modifier" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" class="btn btn-dark btn-sm">Retour à la liste</a>
</div>