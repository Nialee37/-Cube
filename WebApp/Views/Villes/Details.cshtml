@model WebApp.Models.VilleViewModel
@{
    ViewData["Title"] = "Détails d'une ville";
}


<h2>Détails d'une ville</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>&nbsp;
                @Html.DisplayFor(modelItem => Model.Nom)

                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPostal" class="control-label"></label>&nbsp;
                @Html.DisplayFor(modelItem => Model.CPostal)
                <span asp-validation-for="CPostal" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.IdVille" class="btn btn-light btn-sm">Modifier</a>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark btn-sm">Retour à la liste</a>
</div>