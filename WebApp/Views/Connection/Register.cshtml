<!DOCTYPE html>
<html>
    
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Page de création de compte</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </head>
    
    <body>  
@model WebApp.Models.Personne
@{
    ViewData["Title"] = "Ajout d'une Personne";
}
<h2>Ajout d'une Personne</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterCreate">
            <h4>Personne</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- #region nomPersonne -->
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <!-- #endregion -->
            <!-- #region prenomPersonne -->
            <div class="form-group">
                <label asp-for="Prenom" class="control-label"></label>
                <input asp-for="Prenom" class="form-control" />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>
            <!-- #endregion -->

             <div class="form-group">
                <label asp-for="Mail" class="control-label"></label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="PasswordHash" class="control-label"></label>
                <input asp-for="PasswordHash" type="password" class="form-control" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>

            <!-- #region dateNaissancePersonne -->
            <div class="form-group">
                <label asp-for="DateNaissance" class="control-label"></label>
                <input asp-for="DateNaissance" class="form-control" />
                <span asp-validation-for="DateNaissance" class="text-danger"></span>
            </div>
            <!-- #endregion -->
            <!-- #region genrePersonne -->
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <select asp-for="Genre" class="form-control" asp-items="@(new SelectList(ViewBag.ListGenres,"Value", "Text"))"></select>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <!-- #endregion -->
           
            <hr />
            <h4>Adresse</h4>
            <!-- #region numeroAdresse -->
            <div class="form-group">
                <label asp-for="Adresse.Numero" class="control-label"></label>
                <input asp-for="Adresse.Numero" class="form-control" />
                <span asp-validation-for="Adresse.Numero" class="text-danger"></span>
            </div>
            <!-- #endregion -->
            <!-- #region nomAdresse -->
            <div class="form-group">
                <label asp-for="Adresse.Nom" class="control-label"></label>
                <input asp-for="Adresse.Nom" class="form-control" />
                <span asp-validation-for="Adresse.Nom" class="text-danger"></span>
            </div>
            <!-- #endregion -->
            <!-- #region typeAdresse -->
            <div class="form-group">
                <label asp-for="Adresse.Type" class="control-label"></label>
                <select asp-for="Adresse.Type" class="form-control" asp-items="@(new SelectList(ViewBag.ListTypeAdresse,"Value", "Text"))"></select>
                <span asp-validation-for="Adresse.Type" class="text-danger"></span>
            </div>
            <!-- #endregion -->
            <!-- #region IdVille -->
            <input id="IdVille" type="hidden" asp-for="Adresse.IdVille" />
            <div class="form-group">
                <label asp-for="Adresse.Ville.Nom" class="control-label"></label>
                <select asp-for="Adresse.Ville.IdVille" onchange="RecupIdVille(this.value)" class="form-control" asp-items="@(new SelectList(ViewBag.ListVilles,"Value", "Text"))"></select>
            </div>
            <!-- #endregion -->


            <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-success" />
            </div>

        </form>
    </div>
</div>

<script>
    function RecupIdVille(value) {
        document.getElementById("IdVille").value = value;
    }

</script>
<div>
    <a asp-action="Index" class="btn btn-dark btn-sm">Retour à la liste</a>
</div>
</body>
</html>>